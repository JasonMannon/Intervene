<h1>Categories</h1>

<%= link_to "Add intervention type", new_category_path %>
<br><br>

<table>
  <tr>
    <td>ID</td>
    <td>Name</td>
    <td>Edit</td>
    <td>Delete</td>
  </tr>
  <% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= link_to category.name, category_path(category) %></td>
    <td><%= link_to "Edit", edit_category_path(category) %></td>
    <td><%= link_to "Delete", category_path(category),
                              method: :delete,
                              data: { confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
